{
  "name": "ic-music",
  "productName": "ic-music",
  "version": "0.1.0",
  "description": "ic-music for windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "javon",
  "license": "GPL-3.0-only",
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-custom-notifications": "^8.0.5",
    "network-speed": "^2.1.1",
    "ping": "^0.4.4",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.javon.icmusic",
    "productName": "ic-music",
    "asar": false,
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,test.js,test.ts}",
      "!**/*.map"
    ],
    "extraFiles": [
      {
        "from": "download.py",
        "to": "download.py"
      },
      {
        "from": "saves",
        "to": "saves",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "img/ic-icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "executableName": "ic-music"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    }
  }
}
